<Page x:Class="semana_2_aysa.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:semana_2_aysa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBox x:Name="usernameBox" Margin="5" Width="200" Height="15"  ></TextBox>
            <PasswordBox x:Name="passwordBox" Margin="5" Width="200" Height="15"  ></PasswordBox>
            <Button Content="Login" Height="20" Click="Button_Click" Margin="5" Width="60" ></Button>
            <Button Content="Cancelar" Height="20" Click="Button_Click" Margin="5" Width="60" ></Button>
        </StackPanel>
        
    </Grid>
</Page>
